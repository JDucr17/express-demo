{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "verbatimModuleSyntax": true,
    "isolatedModules": true
  },
  "include": ["src", "vitest.config.ts", "drizzle.config.ts", "esbuild.config.mjs"],
  "exclude": ["node_modules", "dist"]
}
